@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Collection</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>

        Search by genre:    <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
    </p>
    <p>
        Search by title: <input type="text" asp-for="SearchString" />
    </p>
    <p>
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Title", "Index", new { currentGenre = ViewBag.CurrentGenre, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.NameSortParm})
            </th>
            <th>
                @Html.ActionLink("Release Date", "Index", new { currentGenre = ViewBag.CurrentGenre, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.DateSortParm})
            </th>
            <th>
                @Html.ActionLink("Genre", "Index", new { currentGenre = ViewBag.CurrentGenre, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.GenreSortParm})
            </th>
            <th>
                @Html.ActionLink("Price", "Index", new { currentGenre = ViewBag.CurrentGenre, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.PriceSortParm})
            </th>
            <th>
                @Html.ActionLink("Stock", "Index", new { currentGenre = ViewBag.CurrentGenre, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.StockSortParm})
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>